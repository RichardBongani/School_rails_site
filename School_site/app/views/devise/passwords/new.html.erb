<%= render 'partials/signup' %>
<div class=" container forgot_pwd_container">
<div class="text-center">
  <%= render "devise/shared/error_messages", resource: resource %>
</div>
<h2 class="text-white text-center">Forgot your password?</h2>
<div class="forgot_pwd">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

  <div class="field">
    <%= f.label :email, class:"text-white" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class:"btn btn-primary mt-3 btn-md btn-block" %>
  </div>
<% end %>
</div>
<%= render "devise/shared/links" %>
</div>
