<%= render 'partials/edit' %>
<section class="container">
<div class="edit_reg">
<div class="edit_inner_container">
<h2 class="text-center">Edit <%= resource_name.to_s.humanize %></h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  
<section class="avatar">
  <div class="row">
    <div class="col-sm-4">
      <% if resource.avatar.attached? %>
        <%= image_tag resource.avatar.variant(resise: "100x100|"), class: "rounded-circle" %>
      <% else %>
        <%= image_tag gravatar_image_url(current_user.email, size: 50),class: "rounded-circle my_avatar" %>
      <% end %>
    </div>
    <div class="col-sm-8">
      <div class="field">
          <%= f.file_field :avatar %><br />
      </div>
    </div>
  </div>
</section>


  <div class="row">
  <div class="col-md-6">
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password",class:"form-control" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>
  </div>

  <div class="col-md-6">
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password",class:"form-control" %>
  </div>

  <div class="actions">
  <%= f.submit "Update", class: ' btn btn-primary mt-3' %>
</div>
  </div>

  </div>
<% end %>

<p> If you Unhappy you can delete account: <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-primary' %></p>

<%= link_to "Back to Dashboard", :back, class: "text-white" %>
<div>
</div>
</section>